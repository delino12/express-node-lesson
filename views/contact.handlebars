<style type="text/css">
	.dino-form {
		font-family: lato;
		font-size: 14px;
	}

	.dino-input {
		border: 1px solid #999;
		padding: 0.8em;
		border-radius: 3px;
	}

	.dino-btn {
		border: 1px solid #999;
		padding: 0.8em;
		border-radius: 3px;
	}
</style>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1 class="title"> Contact Me </h1>
			<hr />
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<div class="dino-form">
				<div class="thumbnail">
					<div class="panel-body">
						<div class="form-group">
							<label for="name">Name</label>
							<input type="text" class="dino-input" name="name" placeholder="Your Name" required="">
						</div>

						<div class="form-group">
							<label for="email">Email</label>
							<input type="email" class="dino-input" name="email" placeholder="Your Email" required="">
						</div>

						<div class="form-group">
							<label>Message</label>
							<textarea cols="20" rows="5" class="dino-input" name="message" required=""></textarea>
						</div>

						<div class="form-group">
							<button class="dino-btn">Send</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>